workspace_auto_back_and_forth yes

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws11 "11:"
set $ws12 "12:"
set $ws13 "13:"

set $out1 HDMI-A-1
set $out2 DP-2
set $out3 DP-3

# Rotate and positionate OUT3
exec --no-startup-id swaymsg output $out3 transform 270
exec --no-startup-id swaymsg output $out3 position 0 0
exec --no-startup-id swaymsg output $out1 position 1080 1400
exec --no-startup-id swaymsg output $out2 position 3000 1400

# Specific workspace output
workspace $ws1 output $out1
workspace $ws2 output $out2
workspace $ws3 output $out1
workspace $ws4 output $out2
workspace $ws5 output $out1
workspace $ws6 output $out2
workspace $ws7 output $out1
workspace $ws8 output $out2
workspace $ws9 output $out1
workspace $ws10 output $out2
workspace $ws11 output $out1 # chromium
workspace $ws12 output $out2 # telegram
workspace $ws13 output $out3 # firefox

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Ctrl+1 workspace $ws11
bindsym $mod+Ctrl+2 workspace $ws12
bindsym $mod+Ctrl+3 workspace $ws13

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# START
exec --no-startup-id swaymsg 'workspace $ws11; exec chromium'
exec --no-startup-id swaymsg 'workspace $ws12; exec telegram-desktop'
exec --no-startup-id swaymsg 'workspace $ws13; exec discord'
exec --no-startup-id swaymsg 'exec firefox; layout toggle split'
